<html lang="it" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Esercizio 3</title>
  </head>
  <body>
    <script type="text/javascript">

      //Chiedi un numero all’utente e stampa in console il numero successivo.
      var userNum = prompt("Inserisci un numero");
      alert(++userNum + " è il numero successivo!");

    /*Crea un array contenente 3 nomi. Chiedi un numero da 0 a 2 all’utente
      e stampa l’elemento dell’array corrispondente. */
      var names = ["Piero", "Valentina", "Nicola"];
      var userNumber = prompt("Scrivi un numero da 0 a 2");

      if(userNumber > 2 || userNumber < 0) {
        alert("Hai inserito un numero che non è tra 0 e 2")
      } else {
        alert(names[userNumber])
      }

    /* Stampa tutti i numeri da 0 a 1000
      Stampa tutti i numeri da 1000 a 0 */
      alert("Controlla la console!");
      for(var i = 0; i <= 1000; i++) {
        console.log(i);
      }

      for(var j = 1000; j >= 0; --j) {
        console.log(j);
      }
      
      
      // Crea un array contenente 5 nomi e stampali a schermo
       var names = ["Piero", "Valentina", "Nicola", "Adriana", "Dalila"];
       for(var k = 0; k < 5; k++) {
        console.log(names[k]);
        }

        /* Chiedi all’utente la sua email controlla che sia nella lista di chi
        può accedere e stampa un messaggio appropriato */
      var userEmail = prompt("Inserisci la tua email");
      var emails = ["valentinabianco@gmail.com", "mario-rossi@hotmail.it", "francofranco@hotmail.com"];

      if(emails.includes(userEmail)) {
        alert("Email autorizzata");
      } else {
        alert("Email non autorizzata")
      }

      //  Gioco dei dadi, chi fa di più vince
      var dice1 = Math.floor(Math.random() * 6) + 1;
      var dice2 = Math.floor(Math.random() * 6) + 1;

      alert("Giocatore 1 lancia il dado: " + dice1);
      alert("Giocatore 2 lancia il dado " + dice2);

      if(dice1 > dice2) {
        alert("Giocatore 1 ha vinto!");
      } else if (dice1 == dice2) {
        alert("Pareggio!");
      } else {
        alert("Giocatore 2 ha vinto!");
      }

    </script>
  </body>
